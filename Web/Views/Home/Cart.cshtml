@section Scripts{
    <script src="~/tema/js/imask.min.js"></script>
    <script src="~/tema/js/creditcart.theme.js"></script>
    <script>

        $(document).ready(function () {
            $('.tabs').tabs();

            var transferId = "@bankTransfer[0].Value";

            bankTransfer(transferId);

            $("[name='BankTransfer']").change(function () {

                transferId = $(this).val();
                bankTransfer(transferId);

            })

            function bankTransfer(transferId) {

                fetch("/Home/GetBankTransfer/" + transferId, {
                    method: "post"
                })
                    .then(r => r.json())
                    .then(r => {


                        $(".Buyer").html(r.buyer);
                        $(".Branch").html(r.branch);
                        $(".AccountNumber").html(r.accountNumber);
                        $(".IBAN").html(r.iban);
                        $(".Swift").html(r.swift);

                    })

            }

            function getPaymentInformation() {

                var paymentId = $("[name='Payment']:checked").attr("class");

                fetch("/Home/GetPaymentInformation/" + paymentId, {
                    method: "post"
                })
                    .then(r => r.text())
                    .then(r => {

                        $(".Information").html(r);

                    })


            }

            $(".tabs li").click(function () {

                var radio = $(this).find("[name='Payment']");

                $(".tabs li [name='Payment']").removeAttr("checked");

                radio.attr("checked", "checked");

                payPrice();
                getPaymentInformation();

            })

            fetch("/Home/GetCartTable?process=get", {
                method: "post"
            }).
                then(r => r.text())
                .then(r => {

                    $(".cartTable").html(r);

                })

            $("#address").hide();
            $("#payment").hide();
            $("#approval").hide();
            $(".giftNoteDetail").hide();
            $(".CityDistrict").hide();
            Fancybox.bind("[data-fancybox]", {
                // Your options go here
            });

        });

        $("[name='City']").change(function () {

            var getCity = $(this).val();
            $("[name='District']").html("<option value=''>Yaşadığınız İlçe</option>");
            fetch("/Home/GetDistrict/" + getCity, {
                method: "post"
            })
                .then(r => r.json())
                .then(r => {

                    $.each(r, function (i, e) {

                        $("[name='District']").append($("<option>", {
                            value: e.id,
                            text: e.title
                        }))

                    })



                })

        })

        $("[name='GiftNote']").click(function () {

            if ($(this).is(":checked")) {

                $(".giftNoteDetail").show();

            } else {
                $(".giftNoteDetail").hide();
            }

        })
        $("[name='Country']").change(function () {

            var countryId = $(this).val();

            if (countryId == 1) {

                $(".CityDistrict").show();

            } else {
                $(".CityDistrict").hide();
            }

            fetch("/Home/Getcargos/" + countryId, {
                method: "post"
            })
                .then(r => r.json())
                .then(r => {

                    var ifCargo = false;

                    $(".cargoList").html("");
                    $.each(r, function (i, e) {

                        var ucret = e.price;

                        if (ucret == "0") {
                            ucret = "ÜCRETSİZ";
                        } else {
                            ucret = "₺" + ucret;
                        }

                        var checked = "";

                        if (i == 0) {
                            checked = "checked";
                        }

                        $(".cargoList").append("<p>" +
                            "<label>" +
                            "<input name='Cargos' type='radio' value='" + e.id + "' " + checked + "/>" +
                            "<span>" + e.title + " (" + ucret + ")</span>" +
                            "</label>" +
                            "</p>");

                        ifCargo = true;

                    })

                    payPrice();

                })


        })

        $(".cartHeader input[type=button]").click(function () {

            var getclass = $(this).attr("class").split(' ');

            $(".column").hide();

            if (getclass[0] != "payment") {

                $(".payment").attr("disabled", "disabled");
                $(".payment").removeClass("active");

            }

            $("#" + getclass[0]).show();

        })

        $(document).on("click", "[name='Cargos']", function () {

            payPrice();

        })

        var form = $(".addressForm");
        form.validate({
            lang: 'tr'
        });

        $(document).on("click", ".buyBtn", function () {

            var id = $(this).attr("name");

            if (id == "payment") {

                if (form.valid()) {
                    $(".column").hide();
                    $("." + id).addClass("active");
                    $("." + id).removeAttr("disabled");
                    $("#" + id).show();

                    $(".nameSurname").html($("[name='Name']").val() + " " + $("[name='Surname']").val());
                    $(".telephone").html($("[name='GSM']").val());
                    $(".email").html($("[name='Email']").val());
                    $(".addressOrder").html($("[name='Adress']").val() + " " + $("[name='District'] option:selected").text() + "/" + $("[name='City'] option:selected").text());

                    payPrice();
                    getInstallment();
                }

            } else {
                $(".column").hide();
                $("." + id).addClass("active");
                $("." + id).removeAttr("disabled");
                $("#" + id).show();

            }

        })

        function payPrice() {

            var coupon = $("[name='Coupon']").val();

            var cargo = "";

            var cargoList = $("[name='Cargos']:checked").val();

            if (cargoList != undefined) {

                cargo = $("[name='Cargos']:checked").val();

            }

            var paymentPrice = $("[name='Payment']:checked").val();

            fetch("/Home/PayPrice?coupon=" + coupon + "&cargo=" + cargo + "&paymentPrice=" + paymentPrice, {
                method: "post"
            })
                .then(r => r.json())
                .then(r => {

                    $(".payment").val("Ödeme (₺" + r.generalTotal + ")");

                    $(".SubTotal").html("₺" + r.cartTotal);
                    $(".CargoPrice").html("₺" + r.cargo);
                    $(".CouponPrice").html("₺" + r.coupon);
                    $(".GeneralTotal").html("₺" + r.generalTotal);
                })

        }

        function getInstallment() {

            var coupon = $("[name='Coupon']").val();

            var cargo = "";

            var cargoList = $("[name='Cargos']:checked").val();

            if (cargoList != undefined) {
                cargo = $("[name='Cargos']:checked").val();
            }

            var paymentPrice = $("[name='Payment']:checked").val();

            fetch("/Home/GetInstallment?coupon=" + coupon + "&cargo=" + cargo + "&paymentPrice=" + paymentPrice, {
                method: "post"
            })
                .then(r => r.text())
                .then(r => {

                    $(".installment").html(r);

                })

        }

        $(".paymentButton").click(function () {

            CreateOrder();

        });

        function CreateOrder() {

            var coupon = $("[name='Coupon']").val();

            var cargo = "";

            var cargoList = $("[name='Cargos']:checked").val();

            if (cargoList != undefined) {

                cargo = $("[name='Cargos']:checked").val();

            }

            var paymentPrice = $("[name='Payment']:checked").val();
            var paymentId = $("[name='Payment']:checked").attr("class");

            var giftBox = false;

            if ($("[name='GiftBox']").is("checked")) {
                giftBox = true;
            }

            var payAtDoor = "0";

            if($("[name='Payment']:checked").attr("class") == "4"){
            
                payAtDoor = $("[name='PayAtDoor']:checked").val();
            
            }

            var formData = new FormData();

            formData.append("Name", $("[name='Name']").val());
            formData.append("Surname", $("[name='Surname']").val());
            formData.append("GSM", $("[name='GSM']").val());
            formData.append("Email", $("[name='Email']").val());
            formData.append("City", $("[name='City']").val());
            formData.append("District", $("[name='District']").val());
            formData.append("Adress", $("[name='Adress']").val());
            formData.append("OrderNote", $("[name='OrderNote']").val());
            formData.append("GiftBox", giftBox);
            formData.append("giftNoteTop", $("[name='giftNoteTop']").val());
            formData.append("giftNoteBottom", $("[name='giftNoteBottom']").val());
            formData.append("PayAtDoor", payAtDoor);

            fetch("/Home/CreateOrder?coupon=" + coupon + "&cargo=" + cargo + "&paymentPrice=" + paymentPrice + "&paymentId=" + paymentId, {
                method: "post",
                body: formData
            })
                .then(r => r.json())
                .then(r => {

                    if (r != "0") {

                        $(".column").hide();

                        $(".cartHeader input[type=button]").attr("disabled", "disabled");

                        $(".approval").addClass("active");

                        $("#approval").show();

                        $(".orderNameSurname").html(r.name + " " + r.surname);

                        $(".orderId").html(r.orderId);

                        cartcount();

                    }

                });

        }
    </script>


